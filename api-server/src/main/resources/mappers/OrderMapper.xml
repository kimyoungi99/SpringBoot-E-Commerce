<?xml version="1.0" encoding="UTF-8"?>

<!-- DTD 선언 -->
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ecommerce.servercommon.domain.order.OrderDao">
    <!-- product 삽입 -->
    <insert id="add" useGeneratedKeys="true" keyProperty="id" parameterType="Order">
        INSERT INTO product_order (_id, product_id, order_time, address, quantity, order_status)
        VALUES(#{id}, #{productId}, #{orderTime}, #{address}, #{quantity}, #{orderStatus.value})
    </insert>

    <!--id로 조회 -->
    <select id="findById" resultMap="selectOrderMap" parameterType="Long">
        SELECT * FROM product_order
        WHERE _id = #{id}
    </select>

    <!--id로 삭제 -->
    <select id="deleteById" parameterType="Long">
        DELETE FROM product_order
        WHERE _id = #{id}
    </select>

